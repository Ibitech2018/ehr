<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.divide.ibitech.divide_ibitech">

    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@drawable/ibitech_mini_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ibitech_mini_logo"
        android:supportsRtl="true"
        android:theme="@style/NoActionBarTheme">
        <activity
            android:name=".Welcome"
            android:theme="@style/NoActionBarTheme">

        </activity>
        <activity android:name=".SlideOne"
            android:theme="@style/NoActionBarTheme"/>
        <activity android:name=".SlideTwo"
            android:theme="@style/NoActionBarTheme"/>
        <activity
            android:name=".Register"
            android:screenOrientation="locked"
            android:theme="@style/NoActionBarTheme" />
        <activity
            android:name=".Login"
            android:screenOrientation="locked"
            android:theme="@style/NoActionBarTheme" />
        <activity
            android:name=".Dashboard"
            android:screenOrientation="locked"
            android:theme="@style/Theme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AddCondition"
            android:theme="@style/NoActionBarTheme">

        </activity>
        <activity android:name=".RequestDevice"
            android:theme="@style/NoActionBarTheme"/>
        <activity android:name=".AddSymptom"
            android:theme="@style/NoActionBarTheme"/>
        <activity
            android:name=".AddAllergy"
            android:theme="@style/NoActionBarTheme" />

        <activity
            android:name=".Profile"
            android:label="Profile" />

        <activity android:name=".Reports"
            android:label="Reports"/>

        <activity android:name=".Settings"
            android:label="Setting"/>


    </application>

</manifest>